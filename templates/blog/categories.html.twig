{% extends 'base.html.twig' %}

{% block titlepage %}Toutes las catégories{% endblock %}

{% block body %}
    {% for category in categories %}
        <article class="row">
            <div class="col-3"><img class="img-fluid" src="{{ category.picture }}" title="{{ category.title }}"
                    alt="{{ category.title }}"></div>
            <div class="col-9">
                <a href="{{ path('category', {id:category.id}) }}">
                    <h2 class="post-title">
                        {{ category.title }}
                    </h2>
                </a>
                <p>{{ category.description }}</p>
                <p class="post-meta">{{ category.articles | length }} article(s) dans la catégorie</p>
            </div>
        </article>
        <hr>
    {% endfor %}
{% endblock %}